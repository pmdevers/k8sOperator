<linker>
  <assembly fullname="k8sOperator" preserve="all">
    <!-- Preserve all command types for reflection -->
    <type fullname="k8s.Operator.Cli.Commands.*" preserve="all" />
    <type fullname="k8s.Operator.Cli.IOperatorCommand" preserve="all" />
    <type fullname="k8s.Operator.OperatorCommandAttribute" preserve="all" />
    
    <!-- Preserve attributes used for CRD schema generation -->
	<type fullname="k8s.Operator.Generation.EntityScopeAttribute" preserve="all" />
	<type fullname="k8s.Operator.Generation.PatternAttribute" preserve="all" />
	<type fullname="k8s.Operator.Generation.DefaultAttribute" preserve="all" />
    <type fullname="k8s.Operator.Generation.ResyncIntervalAttribute" preserve="all" />
    
    <!-- Preserve KubernetesEntityAttribute used by informers -->
    <type fullname="k8s.KubernetesEntityAttribute" preserve="all" />
       
    <!-- Preserve assembly configuration attributes -->
    <type fullname="k8s.Operator.Configuration.OperatorNameAttribute" preserve="all" />
    <type fullname="k8s.Operator.Configuration.OperatorNamespaceAttribute" preserve="all" />
    <type fullname="k8s.Operator.Configuration.OperatorVersionAttribute" preserve="all" />
  </assembly>
</linker>
