<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>k8s.Frontman</RootNamespace>

    <CreateOperatorLaunchSettings>true</CreateOperatorLaunchSettings>
    <GenerateOperatorDockerfile>true</GenerateOperatorDockerfile>
    <PublishSingleFileExecutable>true</PublishSingleFileExecutable>
    <RuntimeIdentifier>linux-x64</RuntimeIdentifier>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Azure.Storage.Blobs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\k8sOperator\k8sOperator.csproj" />
  </ItemGroup>

</Project>
